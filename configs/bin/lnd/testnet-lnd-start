#!/bin/bash

. $HOME/.bitcoin_envs

if [ "$$BITCOIN_KIT_UPNP_SUPPORT$$" == "Yes" ]; then
    upnpc -m $$BITCOIN_KIT_LOCAL_IP$$ -e 'The lnd (testnet)' -a $$BITCOIN_KIT_LOCAL_IP$$ 9736 9736 tcp || echo "ERROR: i cannot add port redirection [$?] (upnpc -a $$BITCOIN_KIT_LOCAL_IP$$ 9736 9736 tcp)"
fi

{ nohup lnd --configfile=$HOME/.lnd/lnd-testnet.conf &>>$HOME/.lnd/testnet-lnd-run.log & echo $! > $HOME/.testnet-lnd.pid; } &>/dev/null
sleep 1;
echo 'Please unlock lnd daemon (testnet), enter password:';
lncli --rpcserver localhost:10010 unlock
