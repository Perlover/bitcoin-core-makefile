#!/bin/bash

bitcoin_network=mainnet

${bitcoin_network}-bitcoind-start &&
echo -n "wait 10 sec for normal starting the lnd after the bitcoind "; for i in {1..10}; do echo -n '.'; sleep 1; done; echo &&
${bitcoin_network}-lnd-start &&
${bitcoin_network}-lncli-web-start &&
echo "All services of bitcoin lightning (${bitcoin_network}) are started!"
