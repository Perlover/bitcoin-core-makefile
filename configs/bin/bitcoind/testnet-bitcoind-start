#!/bin/bash

. $HOME/.bitcoin_envs

if [ "$$BITCOIN_KIT_UPNP_SUPPORT$$" == "Yes" ]; then
    upnpc -m $$BITCOIN_KIT_LOCAL_IP$$ -e 'The bitcoind (testnet)' -a $$BITCOIN_KIT_LOCAL_IP$$ 18333 18333 tcp || echo "ERROR: i cannot add port redirection [$?] (upnpc -a $$BITCOIN_KIT_LOCAL_IP$$ 18333 18333 tcp)"
fi

bitcoind -conf $HOME/.bitcoin/bitcoin-testnet.conf -pid $HOME/.testnet-bitcoind.pid && echo "OK - bitcoind (testnet) started"
